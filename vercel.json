{
  "functions": {
    "api/send-sms/index.js": {
      "memory": 256,
      "maxDuration": 10,
      "runtime": "nodejs20.x"
    },
    "api/appointment-confirmation/index.js": {
      "memory": 256,
      "maxDuration": 10,
      "runtime": "nodejs20.x"
    },
    "api/business-notification/index.js": {
      "memory": 256,
      "maxDuration": 10,
      "runtime": "nodejs20.x"
    }
  },
  "regions": ["iad1"],
  "headers": [
    {
      "source": "/api/(send-sms|appointment-confirmation|business-notification)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "https://juanzhingre.com,http://localhost:2509" },
        { "key": "Access-Control-Allow-Methods", "value": "POST,OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type,Authorization" }
      ]
    }
  ]
}
